<div style="text-align: center" />
	Share: <input type="text" value="http://memify.me/meme/<%- id %>" style="width: 350px; font-size: 1.3em;" /><br /><br />
	<img src="/images/<%- id %>.jpg" /><br /><br />
	<%- meme.views %> view<% if (meme.views != '1') { %>s<% } %>
</div>

<br clear="all" />
<hr />

<h2>Other memes of <%- meme.toName %></h2>
<p><% if (to.length > 0) { %>
	<% for (var i in to) { %>
	<a href="/meme/<%- to[i] %>"><img src="/images/<%- to[i] %>.jpg" height="50" /></a>
	<% } %>
<% } else { %>None.<% } %></p>

<h2>Other memes by <%- meme.fromName %></h2>
<p><% if (from.length > 0) { %>
	<% for (var i in from) { %>
	<a href="/meme/<%- from[i] %>"><img src="/images/<%- from[i] %>.jpg" height="50" /></a>
	<% } %>
<% } else { %>None.<% } %></p>

<% if (share == true) { %>
<script type="text/javascript">
$(document).ready(function(){
 FB.ui(
   {
     method: 'feed',
     to: '<%- meme.toId %>',
     name: 'You have been memified',
     link: 'http://memify.me/meme/<%- id %>',
     picture: 'http://memify.me/images/<%- id %>.jpg',
     caption: 'Facebook meme generated by memify.me',
     description: 'This website is awesome.',
     message: 'Check out the meme I made of you!'
   },
   function(response) {
     if (response && response.post_id) {
	$.post('/allow', { id: <%- id %> });
     } else {
	$.post('/deny', { id: <%- id %> });
     }
   }
 );
});
</script>
<% } %>
